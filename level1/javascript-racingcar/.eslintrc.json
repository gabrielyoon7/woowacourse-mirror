{
  "rules": {
    "max-lines-per-function": ["error", 10],
    "max-depth": ["error", 2],
    "semi": [2, "always"],
    "eol-last": ["error", "always"]
  },
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["eslint:recommended"]
}
