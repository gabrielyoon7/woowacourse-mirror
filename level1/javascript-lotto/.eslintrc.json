{
  "rules": {
    "max-depth": ["error", 1],
    "semi": [2, "always"],
    "eol-last": ["error", "always"],
    "prefer-const": "error",
    "max-params": ["error", 2]
  },
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["eslint:recommended"]
}
